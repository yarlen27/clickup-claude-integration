# ClickUp Integration Environment Configuration Template
# Copy this file to .env and fill in your values

# ClickUp API Configuration
CLICKUP_API_TOKEN=your_clickup_api_token_here
CLICKUP_BASE_URL=https://api.clickup.com/api/v2

# Redis Configuration  
REDIS_CONNECTION_STRING=redis://localhost:6379
REDIS_PASSWORD=

# API Configuration
API_PORT=5000
API_ENVIRONMENT=Development

# MCP Server Configuration
MCP_PORT=3000
MCP_HOST=localhost

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=/var/log/clickup-integration

# Security
JWT_SECRET=your_jwt_secret_here_min_32_chars
API_KEY=your_api_key_for_internal_communication

# Docker Configuration
COMPOSE_PROJECT_NAME=clickup-integration
DOCKER_NETWORK=clickup-network